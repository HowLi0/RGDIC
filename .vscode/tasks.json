{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "构建 CUDA 版本",
            "type": "shell",
            "command": "${workspaceFolder}/build_cuda.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "构建 CPU 版本",
            "type": "shell",
            "command": "${workspaceFolder}/build_cpu.bat",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}
